{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "no.ks.fiks.plan.v2.felles.flate.schema.json",
    "title": "Flate",
    "definitions": {},
    "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "enum": [
                "Polygon"
            ]
        },
        "koordinater": {
            "type": "array",
            "minItems": 4,
            "items": {
                "type": "array",
                "minItems": 2,
                "items": {
                    "type": "number"
                }
            }
        },
        "koordinatsystem": {
            "type": "object",
            "description" : "Kodeliste: https://github.com/ks-no/fiks-plan-specification/wiki/Kodeliste-Koordinatsystemer",
            "properties": {
                "kodeverdi": {
                    "type": "string"
                },
                "kodebeskrivelse": {
                    "type": "string"
                }
            }
        }
    },
    "required": [
        "type",
        "koordinater",
        "koordinatsystem"
    ]
}