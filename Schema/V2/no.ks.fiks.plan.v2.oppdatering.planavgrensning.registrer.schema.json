{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "no.ks.fiks.plan.v2.oppdatering.planavgrensning.registrer.schema.json",
    "title": "RegistrerPlanavgrensning",
    "definitions": {
        "Plandokument": {
            "type": "object",
            "properties": {
                "tittel": {
                    "type": "string"
                },
                "dokumenttype": {
                    "type": "object",
                    "properties": {
                        "kodeverdi": {
                            "type": "string"
                        },
                        "kodebeskrivelse": {
                            "type": "string"
                        }
                    }
                },
                "referanseDokumentfil": {
                    "type": "string"
                },
                "mimetype": {
                    "type": "string"
                },
                "dokumentsdato": {
                    "type": "string",
                    "format": "date"
                },
                "arkivnavn": {
                    "type": "string"
                }
            },
            "required": [
                "tittel",
                "referanseDokumentfil",
                "arkivnavn"
            ]
        }
    },
    "type": "object",
    "properties": {
        "nasjonalArealplanId": {
            "$ref": "no.ks.fiks.plan.v2.felles.nasjonalarealplanid.schema.json"
        },
        "saksnummer": {
            "type": "object",
            "properties": {
                "saksaar": {
                    "type": "integer"
                },
                "sakssekvensnummer": {
                    "type": "integer"
                }
            },
            "required": [
                "saksaar",
                "sakssekvensnummer"
            ]
        },
        "vedlegg": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/Plandokument"
            }
        }
    }
}